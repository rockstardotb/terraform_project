# Configure Terragrunt to use DynamoDB for locking
lock = {
	backend = "dynamodb"

	config {
		state_file_id = "global/s3"
	}
}

# Configure Terragrunt to automatically store tfstate files in S3
remote_state = {
	backend = "s3"

	config {
		encrypt = "true"
		bucket 	= "adialexlid"
		key	= "global/s3/terraform.tfstate"
		region	= "us-east-1"
	}
}
